# bash completion for grub


_ti_all () {
	local values
	saveIFS=$IFS;
	IFS=$'\n';
	values="$(tibashcomplete_base "$COMP_CWORD" "${COMP_WORDS[@]}")";
	COMPREPLY=( $values );
	IFS=$saveIFS;
}

list=$(ls "/class")
for class_name in $list; do
	complete -o nospace -F _ti_all $class_name
done


